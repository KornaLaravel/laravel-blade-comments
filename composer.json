{
    "name": "spatie/laravel-blade-comments",
    "description": "Add debug comments to your rendered output",
    "keywords": [
        "spatie",
        "laravel",
        "laravel-blade-comments",
        "debug",
        "blade",
        "view",
        "comments"
    ],
    "homepage": "https://github.com/spatie/laravel-blade-comments",
    "license": "MIT",
    "authors": [
        {
            "name": "Tim Van Dijck",
            "email": "tim@spatie.be",
            "role": "Developer"
        },
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^9.0|^10.0",
        "illuminate/view": "^9.0|^10.0",
        "spatie/invade": "^1.1.1",
        "spatie/laravel-package-tools": "^1.15.0"
    },
    "require-dev": {
        "laravel/pint": "^1.10",
        "livewire/livewire": "*",
        "nunomaduro/collision": "^7",
        "orchestra/testbench": "^8.5.4",
        "pestphp/pest": "^2.6.1",
        "pestphp/pest-plugin-arch": "^2.1.2",
        "pestphp/pest-plugin-laravel": "^2.0",
        "spatie/laravel-ray": "^1.32.4",
        "spatie/pest-plugin-snapshots": "^2.0.1"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\BladeComments\\": "src/",
            "Spatie\\BladeComments\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\BladeComments\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Spatie\\BladeComments\\BladeCommentsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
